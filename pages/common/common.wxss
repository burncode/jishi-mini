
view {
  margin-left: 40rpx;
  margin-right: 40rpx;
}
text.point {
  margin-left: 40rpx;
  margin-right: 40rpx;
  color: #00479d;
}
.h1 {
  font-weight: bold;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}
.h2 {
  font-weight: bold;
  font-size: 30rpx;
  margin-bottom: 40rpx;
}
.blue {
  color: #00479d;
}
.b {
  font-weight: bold;
}

.center {
  text-align: center;
}

.p {
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 40rpx;
}

text.block {
  display: block;
}
text.indent-block {
  display: block;
  text-indent: 40rpx;
}

button {
  color: #fff;
  background-color: #00479d;
  border-radius: 0;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;

}
button::after {
  border-radius: 0;
}

.delete {
  text-decoration: line-through;
}

.left {
  float: left;
}

.right {
  float: right;
}

.clear-both {
  overflow: hidden;
}

.options text.block {
  width: 520rpx;
  height: 35rpx;

}
.options radio {
  width: 35rpx;
  height: 35rpx;
  margin-right: 25rpx;
}
view {
  overflow: hidden;
}
