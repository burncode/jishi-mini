@import "/pages/common/common.wxss";
view{
  margin-left: 0;
  margin-right: 0;
}
.comment-star .star {
  float: left;
  width: 54rpx;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  padding: 20rpx 2rpx;
}
.star image{
  width: 48rpx;
  height: 48rpx;
}

.row,.content {
  margin-left: 40rpx;
  margin-right: 40rpx;
}
.icon {
  width: 26rpx;
  height: 26rpx;
  margin-right: 30rpx;
}
.subject-name {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #888888;
}

.h1 {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.stars {
  margin-top: 23rpx;
  border-top: solid 2rpx #cfcfcf;
  border-bottom: solid 2rpx #cfcfcf;
}
.item {
  margin-left: 40rpx;
  margin-right: 40rpx;
 clear: both;
 overflow: hidden;
}

.item .title {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #888888;
}
.level {
  float: right;
  line-height: 54rpx;
  padding: 20rpx 2rpx;
  font-size: 28rpx;
  color: #888888;
}
.content {
  clear: both;
  margin-top: 110rpx;
  font-size: 28rpx;
  color: #888888;
}

.remainer {
  font-size: 24rpx;
  line-height: 40rpx;
  color: #888888;
}


/*弹窗*/
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
  text-align: center;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}


.modal-input image {
  width: 180rpx;
  height: 180rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}


.btn-confirm button{
  width: 50%;
  color: #00479d;
  text-align: center;

  background-color: #fff;
  border-radius: 0;
  position: absolute;
  height: 88rpx;
  line-height: 88rpx;
}

.fake-textarea{
  height: 350rpx;
}