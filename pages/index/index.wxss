page{
  background-color: #f7f7f7;
}
swiper {
  width: 100%;
  height: 340 rpx;
}

swiper image{
  display: block;
  width: 100%;
  height: 100%;
}

.bobao{
  margin-top: 10rpx;
  padding: 30rpx 20rpx;
  background-color: #fff;
  overflow: hidden;
}
.bobao text{
  font-weight: bold;
  font-size: 35rpx;
  margin-left: 10rpx;
  line-height: 1;
}
.bobao-img{
  display: flex;
  align-items: center;
  float: left;
}

.bobao-img image {
  width: 85rpx;
  height: 45rpx;

}
.bobao-content {
  font-size: 26rpx;
  float: left;
  width: 70%;
  padding:10rpx 0 0 30rpx;
}
.zhuanjia-img {
  float: left;
}
.zhuanjia-img image.profile {
  border-radius: 50%;
  box-sizing: border-box;
}
.block {
  overflow: hidden;
  padding-top: 35rpx;
}
.zhuanjia-img image{
  width: 300rpx;
  height: 200rpx;
}
.zhuanjia-content {
  padding-left: 25rpx;
  font-size: 26rpx;
  float: left;
  width: 50%;
}
.comments{
  overflow:hidden;
  margin-bottom:-1rpx;
  padding-top: 20rpx;
  border-bottom: 1rpx solid #d8d8d8;
}
.comment-h1{
  padding-bottom:20rpx;
}
.comments-img {
  float: left;
  margin-left: 20rpx;
}
.comments-img image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  box-sizing: border-box;
}
.h1 {
  font-weight: bold;
}
.h2 {
  font-weight: bold;
}
.p {
  font-size: 22rpx;
  color: #888;
}
.hits {
  font-size: 22rpx;
  color: #b2b2b2;
  float: right;
}
.hits span{
  color:  #1A4B97;
}
.date {
  margin-top: 30rpx; 
  font-size: 22rpx;
  color: #b2b2b2;

}

.huodong {
  color: #d8d8d8;
  font-size: 30rpx;
  border-top: 2rpx solid #f7f7f7;
}

.price {
  color: #e64340;
  font-weight: bold; 
}
.del-price {
  text-decoration: line-through;
  margin-right: 50rpx;
}

.bg-white {
  background-color: #fff;
  padding: 40rpx 20rpx 0;
  margin-top:10rpx;
}