/* pages/ceping/submit.wxss */
@import "/pages/common/common.wxss";
progress {
  width: 100%;
  height: 30rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.progress-number {
  margin-left: 40rpx;
}

.harf-left {
  width: 35%;
  float: left;
}
.harf-left text.block {
  text-align: left;
}
.harf-right {
  width: 40%;
  float: left;
}
.harf-right text.block {
  text-align: right;
}

.option {
  overflow: hidden;
  margin-bottom: 30rpx;
  min-height:260rpx;
}

radio {
  margin-bottom: 30rpx;
}

.letter-a {
  font-weight: bold;
  font-size: 32rpx;
  line-height: 48rpx;
  color: #00479d;
}

.letter-b {
  font-weight: bold;
  font-size: 32rpx;
  line-height: 48rpx;
  color: #f99310;
}
