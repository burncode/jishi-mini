<view class='list-tab'>
    <text open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" class='tab {{activeUnfinished}}'
          bindtap='activeUnfinished'>我送出的
    </text>
    <text open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" class='tab {{activeFinished}}'
          bindtap='activeFinished'>我收到的
    </text>
</view>

<!--我送出的-->
<view wx:if="{{tab=='send'}}" class='order-list'>
<view wx:for="{{gifts}}">
    <view class='order-item' bindtap="toGoodDetail" data-id="{{item.order.goods.id}}">
        <view class='order-img'>
            <image src='{{item.order.goods.goods_image}}'></image>
        </view>
        <view class='order-content'>
            <view>
                <text class='h1'>{{item.order.title}}</text>
            </view>
            <view>
                <text class='price'>￥ {{item.order.paid_price}}</text>
                <text class='price-msg'>活动结束恢复原价</text>
            </view>
            <view class='del-price'>原价：￥ {{item.order.price}}</view>
        </view>
    </view>
    <view class='order-date p'>增送时间：{{item.order.created_at}}</view>
    <view>
        <view class='order-no p'>订单编号：{{item.order.order_id}}</view>
        <view class='copy-no' bindtap='copy' data-order-no='{{item.order.orderNo}}'>复制</view>
    </view>

    <view class='order-buttons'>
    </view>

    <view class="display-flex bottom-btn">
        <view class="flex-1">
            <text class="time-code content-center tab-view-title">领取时间</text>
            <text class="time-code content-center m-t-30 font-size-25">{{item.user.receive_time}}</text>
        </view>
        <view class="flex-1">
            <text class="time-code content-center tab-view-title">领取人</text>
            <text class="time-code content-center m-t-30 font-size-36">{{item.user.name}}</text>
        </view>
        <view class="flex-1">
            <text class="time-code content-center tab-view-title">报告</text>
            <label wx:if="{{ item.user.subject_status == 0}}" class='now active content-center m-t-30'>未测评</label>
            <label wx:if="{{ item.user.subject_status == 2}}" class='now active content-center m-t-30' bindtap='goReport' data-order-no='{{item.order.order_id}}'>查看报告</label>
        </view>
    </view>
    <view class='item-line'>
    </view>
</view>
<view class="loading" style="bottom: 180rpx;font-size: 25rpx;text-align:center;" hidden="{{!moreLoading}}">正在载入更多...</view>
<view class="loading complete" style="bottom: 180rpx;font-size: 25rpx;text-align:center;" hidden="{{!moreLoadingComplete}}">
    已加载全部
</view>
</view>

